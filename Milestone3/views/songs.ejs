<%-include ("partials/header")%>
<form method="POST" class="col-8 p-4 bg-white rounded shadow mx-auto">
    <div class="mb-3">
        <label for="q" class="form-label">Zoek op tekst titel of refrein:</label>
        <input type="search" name="q" id="q" value="<%= q %>" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary w-100">Zoek</button>
</form>

<section class=" col-6 mx-auto text-center border-0">
    <% for (let i = 0; i < data.length; i++) { %>
        <p class="list-group-item d-flex justify-content-between align-items-center border-bottom">
            <span><%= data[i].artist %> : <%= data[i].title %></span>
            <% if (user.role === "ADMIN") { %>
                <a href="/songs/<%= data[i].id %>/update" class="btn btn-sm btn-outline-primary">EDIT</a>
            <% } %>
            </p>
    <% } %>
</section>



 

<%-include ("partials/footer")%>